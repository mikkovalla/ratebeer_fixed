<h1>Users</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Username</th>
			<th></th>			
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.username, user %></td>
			<td>
				<% if user.banned %>
					<button type="button" class="btn btn-info btn-xs"><strong>account frozen</strong></button>
				<% end %>
			</td>               
		</tr>
		<% end %>
	</tbody>
</table>